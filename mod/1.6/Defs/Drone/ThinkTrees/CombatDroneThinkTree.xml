<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThinkTreeDef>
    <defName>CombatDroneThinkTree</defName>
    <thinkRoot Class="ThinkNode_Priority">
      <subNodes>

        <li Class="ThinkNode_ConditionalCanDoConstantThinkTreeJobNow">
          <subNodes>

            <li Class="RimNet.ThinkNode_ConditionalIsDroneState">
              <invert>true</invert>
              <stateToCheck>RETURNING</stateToCheck>
              <subNodes>
                <li Class="JobGiver_AIFightEnemies">
                  <targetAcquireRadius>30</targetAcquireRadius>
                  <targetKeepRadius>35</targetKeepRadius>
                </li>
              </subNodes>
            </li>
          </subNodes>
        </li>

      </subNodes>
    </thinkRoot>
  </ThinkTreeDef>

</Defs>
